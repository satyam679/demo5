pipeline {
    agent any

    stages {
        stage('Stage 1') {
            steps {
                echo 'This is Stage 1'
            }
        }
        stage('Stage 2') {
            steps {
                echo 'This is Stage 2'
            }
        }
        stage('Stage 3') {
            steps {
                echo 'This is Stage 3'
            }
        }
        stage('Stage 4') {
            steps {
                echo 'This is Stage 4'
            }
        }
        stage('Stage 5') {
            steps {
                echo 'This is Stage 5'
            }
        }
         stage('Stage 6') {
            steps {
                echo 'This is Stage 6'
            }
        }
         stage('Stage 7') {
            steps {
                echo 'This is Stage 7'
            }
        }
    }
    
    post {
        success {
            echo 'All stages completed successfully!'
        }
        
        failure {
            echo 'Pipeline failed! Review the logs and fix any issues.'
        }
    }
}
